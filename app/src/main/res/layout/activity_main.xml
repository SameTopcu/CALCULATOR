<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/solutıon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/result"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/buttons_layout"
        android:text="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="-3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_C"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="C"

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


            <Button
                android:id="@+id/button_parantez1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="("

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


            <Button
                android:id="@+id/button_parantez2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text=")"

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />

            <Button
                android:id="@+id/button_bol"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="/"

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="7"

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


            <Button
                android:id="@+id/button_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="8"

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


            <Button
                android:id="@+id/button_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="32sp"
                app:cornerRadius="150dip"

                />

            <Button
                android:id="@+id/button_carp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="*"
                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="4"

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


            <Button
                android:id="@+id/button_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="5"

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


            <Button
                android:id="@+id/button_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="6"

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />

            <Button
                android:id="@+id/button_cıkar"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="-"
                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


            <Button
                android:id="@+id/button_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="2"

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


            <Button
                android:id="@+id/button_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="32sp"
                app:cornerRadius="150dip"

                />

            <Button
                android:id="@+id/button_topla"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="+"

                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">


            <Button
                android:id="@+id/button_AC"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="32sp"
                android:backgroundTint="@color/black"
                app:cornerRadius="150dip"

                />


            <Button
                android:id="@+id/button_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="32sp"
                app:cornerRadius="150dip"

                />


            <Button
                android:id="@+id/button_nokta"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="32sp"
                android:backgroundTint="@color/black"
                app:cornerRadius="150dip"

                />

            <Button
                android:id="@+id/button_sonuc"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="32sp"
                android:backgroundTint="@color/black"
                app:cornerRadius="150dip"

                />



        </LinearLayout>
    </LinearLayout>
</RelativeLayout>